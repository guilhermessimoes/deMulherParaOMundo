<%- include("./partials/header") %>
      <div class="carousel carousel-slider center">       
        <div class="carousel-item" href="#one!">
          <img src="/images/crisJunqueira.png" alt="">
        </div>
        <div class="carousel-item" href="#two!">
          <img src="/images/marieCurie.png" alt="">
        </div>
        <div class="carousel-item" href="#three!">
          <img src="/images/rosaParks.png" alt="">
        </div>
        <div class="carousel-item" href="#four!">
          <img src="/images/modelo3.png" alt="">
        </div>
      </div>
      <div class="container" id="cardHome">
        <blockquote>
          <h3> Conheça essas mulheres incríveis que nos inspiram todos os dias. </h3>
        </blockquote>  
        <div class="row">
          <a class="btn-floating right tooltipped btn-large waves-effect waves-light deep-purple darken-4" data-position="right" data-tooltip="Cadastrar novo artigo" href="/cadastroMulher"><i class="material-icons">add</i></a>
        </div>     
        <div class="row">
          <%if (messages.length > 0) { %>
            <div class="materialert success">
                <div class="material-icons">check</div>
                <%= messages %>
            </div>
          <% } %>
          <div class="card-tabs">
            <ul class="tabs tabs-fixed-width">
              <li class="tab col s3"><a class="active purple-text" href="#todos">Todos</a></li>
              <li class="tab col s3"><a class="purple-text" href="#ciencia">Ciência</a></li>
              <li class="tab col s3"><a class="purple-text" href="#arte">Artes</a></li>
              <li class="tab col s3"><a class="purple-text" href="#social">Social</a></li>
            </ul>
          </div>
          <% for(let i=0; i < mulheres.length; i++){ %>
           <!-- Modal Structure -->
           <div id="modal<%= i %>" class="modal">
            <div class="modal-content">
              <h4> <%= mulheres[i].nome + " " %><%= mulheres[i].sobrenome %> </h4>
              <p><b>Data de nascimento: </b><%= (`${mulheres[i].data_nascimento.getDate()}/${mulheres[i].data_nascimento.getMonth()+1}/${mulheres[i].data_nascimento.getFullYear()}`) %></p>
              <p><b>Categoria: </b> <%= mulheres[i].genero %> </p>
              <p><b>País de origem: </b> <%= mulheres[i].pais %> </p>
              <p><b>Descriçao: </b> <%= mulheres[i].descricao %> </p>                    
              <p><b>Link do artigo: </b> <a href=""><%= mulheres[i].link %></a></p>
            </div>
            <div class="modal-footer">
              <a href="#!" class="modal-close waves-effect waves-green btn-flat">Fechar</a>
            </div>
          </div>
          <% } %>
          <div id="todos" class="col s12">            
            <div class="row">
            <% for(let i=0; i < mulheres.length; i++){ %>
              <div class="col s12 m6 l4">
                <div class="card large sticky-action">
                  <div class="card-image">
                    <img src="/data/uploads/<%= mulheres[i].imagem %>">                
                  </div>
                  <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4"><%= mulheres[i].nome + " " + mulheres[i].sobrenome %>
                    <span maxlength="150"><%= mulheres[i].descricao %></span>
                  </div>
                  <div class="card-action">
                    <a class="purple-text" href="/excluir/<%= mulheres[i].id %>">Excluir</a>
                    <a class="purple-text" href="/alterar/<%= mulheres[i].id %>">Editar</a>               
                    <a class="modal-trigger purple-text" href="#modal<%= i %>">Detalhes</a>                    
                  </div>                  
                </div>
                  
              </div>
            <% } %>
            </div>
          </div>
          <div id="ciencia" class="col s12">
            <div class="row">
              <% for(let i=0; i < mulheres.length; i++){ %>
                <% if(mulheres[i].genero == "ciencia"){ %>
                  <div class="col s12 m6 l4">
                    <div class="card large">
                        <div class="card-image">
                          <img src= "/data/uploads/<%= mulheres[i].imagem %>">                
                        </div>
                        <div class="card-content">
                          <span class="card-title activator grey-text text-darken-4"><%= mulheres[i].nome + " " + mulheres[i].sobrenome %>
                          </span>
                          <p><%= mulheres[i].descricao%></p>
                        </div>
                        <div class="card-action">
                          <a class="purple-text" href="/excluir/<%= mulheres[i].id %>">Excluir</a>
                          <a class="purple-text" href="/alterar/<%= mulheres[i].id %>">Editar</a>               
                          <a class="modal-trigger purple-text" href="#modal<%= i %>">Detalhes</a>                    
                        </div>  
                    </div>
                  </div>
                <% } %>
              <% } %>
            </div>
          </div>
          <div id="arte" class="col s12">
            <div class="row">
              <% for(let i=0; i < mulheres.length; i++){ %>
                <% if(mulheres[i].genero == "arte"){ %>
                  <div class="col s12 m6 l4">
                    <div class="card large">
                      <div class="card-image ">
                        <img src="/data/uploads/<%= mulheres[i].imagem %>">             
                      </div>
                      <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4"><%= mulheres[i].nome + " " + mulheres[i].sobrenome %>                          
                        </span>
                        <p><%= mulheres[i].descricao %></p>
                      </div>
                      <div class="card-action">
                        <a class="purple-text" href="/excluir/<%= mulheres[i].id %>">Excluir</a>
                        <a class="purple-text" href="/alterar/<%= mulheres[i].id %>">Editar</a>               
                        <a class="modal-trigger purple-text" href="#modal<%= i %>">Detalhes</a>                    
                      </div>
                    </div>              
                  </div>
                <% } %>
              <% } %>
            </div>
          </div>
          <div id="social" class="col s12">
            <div class="row">
              <% for(let i=0; i < mulheres.length; i++){ %>
                <% if(mulheres[i].genero == "social"){ %>
                  <div class="col s12 m6 l4">
                    <div class="card large">
                      <div class="card-image ">
                        <img src="/data/uploads/<%= mulheres[i].imagem %>">          
                      </div>
                      <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4"><%= mulheres[i].nome + " " + mulheres[i].sobrenome %>                          
                        </span>
                        <p><%= mulheres[i].descricao %></p>
                      </div>
                      <div class="card-action">
                        <a class="purple-text" href="/excluir/<%= mulheres[i].id %>">Excluir</a>
                        <a class="purple-text" href="/alterar/<%= mulheres[i].id %>">Editar</a>               
                        <a class="modal-trigger purple-text" href="#modal<%= i %>">Detalhes</a>                    
                      </div>
                    </div>              
                  </div>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>
<%- include("./partials/footer") %>
   