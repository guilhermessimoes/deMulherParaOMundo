<%- include("./partials/header") %>
<div class="container" id="container_registrar">
  <div class="card" id="registrar_card">
      <% if(typeof alert != 'undefined'){ %>
        <% alert.forEach(function(error){ %>
          <div class="materialert error">
            <div class="material-icons">error_outline</div>
            <%= error.msg %>
          </div>
        <% }) %>
      <% } %>
      <div class="row">
          <form class="col s12" action="/login/registrar" method="POST">
            <div class="row center">
              <h1 class="center">CRIAR CONTA</h1>
              <span>Será enviado uma confirmação no e-mail cadastrado.</span>
            </div>
            <div class="row">
              <div class="input-field col s12 center">
                <input id="nome" type="text" class="validate" name="nome"> 
                <label for="nome">Nome</label>
              </div>              
            </div>
            <div class="row">
              <div class="input-field col s12 center">
                <input id="email" type="email" class="validate" name="email">
                <label for="email">Email</label>
              </div>                
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="senha" type="password" class="validate" name="senha">
                <label for="senha">Senha</label>
              </div>               
            </div>
            <div class="row" id="botoes_registrar">                  
              <a href="../login" class="waves-effect teal lighten-3 btn">Entrar</a>                    
              <button class="waves-effect blue darken-1 btn" type="submit">Confirmar</button>
            </div>         
          </form>
        </div>
  </div>
</div> 
</main>
<%- include("./partials/footer") %>