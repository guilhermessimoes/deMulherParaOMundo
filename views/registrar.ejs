<%- include("./partials/header") %>
<div class="container" id="container_registrar">
    <div class="card" id="registrar_card">
        <div class="row">
            <form class="col s12" action="/registrar" method="post">
              <div class="row center">
                <h1 class="center">CRIAR CONTA</h1>
                <span>Será enviado uma confirmação no e-mail cadastrado.</span>
              </div>
              <div class="row">
                <div class="input-field col s12 center">
                  <input id="nome" type="text" class="validate" name="nome"> 
                  <label for="nome">Nome</label>
                </div>              
              </div>
             

              <div class="row">
                <div class="input-field col s12 center">
                  <input id="email" type="email" class="validate" name="email">
                  <label for="email">Email</label>
                </div>                
              </div>

              <div class="row">
                <div class="input-field col s12">
                  <input id="password" type="password" class="validate" name="password">
                  <label for="password">Senha</label>
                </div>               
              </div>
              <div class="file-field input-field">
                <div class="btn">
                  <span>File</span>
                  <input type="file" multiple>
                </div>
                <div class="file-path-wrapper">
                  <input class="file-path validate" type="text" placeholder="Upload one or more files">
                </div>
              </div>
              <div id="noticia" class="row">
                <label>
                    <input type="checkbox" />
                    <span>Deseja receber noticias e novidades?</span>
                </label>
              </div>
              <div class="row" id="botoes_registrar">                  
                <a href="../login" class="waves-effect grey darken-1 btn">Voltar</a>                    
                <button class="waves-effect blue darken-1 btn" type="submit">Confirmar</button>
              </div>
              <div class="file-field input-field">
                <div class="btn">
                  <span>File</span>
                  <input type="file" multiple>
                </div>
                <div class="file-path-wrapper">
                  <input class="file-path validate" type="text" placeholder="Upload one or more files">
                </div>
              </div>            
            </form>
          </div>
    </div>
</div> 
</main>
<%- include("./partials/footer") %>