<%- include("./partials/header") %>
<div class="container" id="container_registrar">
    <div class="card" id="registrar_card">
        <div class="row">
            <form class="col s12" action="/login/registrarLogin" method="post">
              <div class="row center">
                <h1 class="center">CRIAR CONTA</h1>
                <span>Será enviado uma confirmação no e-mail cadastrado.</span>
              </div>
              <div class="row">
                <div class="input-field col s12 center">
                  <input id="nome" type="text" class="validate" name="nome">
                  <label for="nome">Nome</label>
                </div>              
              </div>
             

              <div class="row">
                <div class="input-field col s6 center">
                  <input id="email" type="email" class="validate" name="email">
                  <label for="email">Email</label>
                </div>
                <div class="input-field col s6 center">
                    <input id="confirmationEmail" type="email" class="validate" name="confirmationEmail">
                    <label for="confirmationEmail">Confirmar Email</label>
                  </div>
              </div>

              <div class="row">
                <div class="input-field col s6">
                  <input id="password" type="password" class="validate" name="password">
                  <label for="password">Senha</label>
                </div>
                <div class="input-field col s6">
                    <input id="confirmationPassword" type="password" class="validate" name="confirmationPassword" >
                    <label for="confirmationPassword">Confirmar Senha</label>
                  </div>
              </div>
              <div id="noticia" class="row">
                <label>
                    <input type="checkbox" />
                    <span>Deseja receber noticias e novidades?</span>
                </label>
              </div>
              <div class="row" id="botoes_registrar">                  
                <a href="../login" class="waves-effect grey darken-1 btn">Voltar</a>                    
                <button class="waves-effect blue darken-1 btn" type="submit">Confirmar</button>
              </div>              
            </form>
          </div>
    </div>
</div> 
</main>
<%- include("./partials/footer") %>